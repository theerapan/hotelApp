<h1>Room List</h1>
<h3><%= link_to 'New Reservation', new_room_path %></h3>
<table>
	<tr>
		<th>Room no.</th>
		<th>Employee Name</th>
		<th>Customer name</th>
		<th>Telephone no.</th>
		<th colspan="3"></th>
	</tr>
	<% @rooms.each do |room| %>
		<tr>
			<td><%= room.room_number %></td>
      		<td><%= @employees.find(room.employee_id).first_name %></td>
      		<td><%= @users.find(room.user_id).first_name + " " +@users.find(room.user_id).last_name %></td>
      		<td><%= @users.find(room.user_id).tel_no %></td>
      		<td><%= link_to 'Edit', edit_room_path(room) %></td>
      		<td><%= link_to 'Destroy', room_path(room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>